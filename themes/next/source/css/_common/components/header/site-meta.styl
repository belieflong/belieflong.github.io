.site-meta {
  margin: 0;
  text-align: $site-meta-text-align;

  +mobile() { text-align: center; }
}
//background: $brand-bg;
.brand {
  position: relative;
  display: inline-block;
  padding: 0 40px;
  color: $brand-color;
  background: transparent; 
  border-bottom: none;
  &:hover { color: $brand-hover-color; }
}

.logo {
  display: inline-block;
  margin-right: 5px;
  line-height: 36px;
  vertical-align: top;
}
//font-size: $logo-font-size;
//font-family: $font-family-logo;
//font-family: "华文行楷",'Lobster Two', 'Roboto Slab', "PingFang SC", "Microsoft YaHei", sans-serif;
.site-title {
  display: inline-block;
  vertical-align: top;
  line-height: 36px;
  font-size: 48px;
  font-weight: normal;
  font-family: $font-family-logo;
}
//color: $subtitle-color;
.site-subtitle {
  margin-top: 10px;
  font-size: $subtitle-font-size;
  color: #000;
}

.use-motion {
  .brand { opacity: 0; }

  .logo, .site-title, .site-subtitle {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}
